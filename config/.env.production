# Performance Settings
MAX_ACTIVE_CONVERSATIONS=100
MAX_MESSAGES_PER_CONVERSATION=1000
MAX_MESSAGE_CONTEXT_FOR_AI=100

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false

# Production Settings
ENVIRONMENT=production